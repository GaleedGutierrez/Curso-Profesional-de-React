root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
spaces_around_operators = true
indent_brace_style = K&R
curly_bracket_next_line = false
end_of_line = lf
# end_of_line = crlf

[*.{ts,tsx,mts,cts,js,jsx,cjs,mjs}]
quote_type = single

[*.{yml, yaml}]
indent_style = space
indent_size = 2
max_line_length = off

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[CHANGELOG.md]
indent_size = false

[*.json]
max_line_length = off

[.gitignore]
max_line_length = off

[README.md]
max_line_length = off
